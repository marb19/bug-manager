<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Proyectos - BUG MANAGER</title>
        <link rel="stylesheet" href="CSS/Style.css" type="text/css" media="screen" />
        <script type="text/javascript" src="./js/jquery-1.4.2.min.js"></script>
        <script type="text/javascript" src="./js/jquery.validate.min.js"></script>
        <script type="text/javascript" src="./js/localization/messages_es.js"></script>
        <script type="text/javascript">
                function goToUrl(url)
                {
                        window.location = url;
                }                
        </script>
    </head>
    <body>
        <div id="header">
            <img src="images/Login/bm-logo.png"  alt="BM logo" id="base-bmlogo"/>
            <div id="base-header-text">
				Hoy es $dateLong.format($date.systemDate)<br/>
				Bienvenido, ${user.fullName}<br/>
                <a href='userLogin.do?op=logout'>Salir</a>
            </div>            
            <div id="base-menu-bar">
                <ul id="nav-bar">
                    <li><a href="listProjects.do">Proyectos</a></li>
                    <li><a href="listReports.do">Reportes</a></li>
                    #if($user.administrator)
                    <li><a href="listUsers.do">Usuarios</a></li>
                    #end
                    <li><a href="listTemplates.do">Plantillas</a></li>
                    <li><a href="listDefectTypes.do">Tipos de defectos</a></li>
                </ul>      
            </div>
        </div>
        <div id="content"> 
            <div id="content-header">
                <span class="breadcrumb-title">Estas viendo:</span>
                <span class="breadcrumb-text">Todos los proyectos</span>

				#if($user.administrator)
                <a href="newProject.do" id="add-icon-link">
                    <img src="images/Base/agregar.png" id="add-icon-img" />
                </a>
				#end
            </div>
			#if ($projects.empty)
				<h3 id="form-title">No existen proyectos registrados.</h3>
			#else
				<table id="content-table">
					<tr>
						<th>Nombre de Proyecto</th>
						<th>Descripci&oacute;n</th>
						<th>Fecha de entrega</th>
						<th>Fecha planeada</th>
						#if($user.administrator)
						<th colspan="2">Acciones</th>
						#end
					</tr>
					#foreach($p in $projects)
					<tr>
                                                #if($p.projectNumberOfPhases > 0)
						<td><a href="listTasks.do?project_id=${p.projectId}">${p.projectName}</a></td>
                                                #else
                                                <td><a href="listPhases.do?project_id=${p.projectId}">${p.projectName}</a></td>
                                                #end
						<td>$display.truncate($p.projectDescription,50)</td>
						<td>$date.format($p.projectDueDate)</td>
						<td>$date.format($p.projectPlannedDate)</td>
						#if($user.administrator)
						#if($p.empty)
						<td><a href="deleteProject.do?project_id=${p.projectId}">Borrar</a></td>
						#else
						<td>&nbsp;</td>
						#end
						<td><a href="modifyProject.do?project_id=${p.projectId}">Modificar</a></td>
						#end
					</tr>
					#end
				</table>
			#end
            <div id="content-footer">
                <span class="breadcrumb-title">Estas viendo:</span>
                <span class="breadcrumb-text">Todos los proyectos</span>

                #if($user.administrator)
                <a href="newProject.do" id="add-icon-link">
                    <img src="images/Base/agregar.png" id="add-icon-img" />
                </a>
                #end

            </div>

        </div>
    </body>
</html>