<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Modificar usuario - BUG MANAGER</title>
		<link rel="stylesheet" href="CSS/Style.css" type="text/css" media="screen" />
		<script type="text/javascript" src="./js/jquery-1.4.2.min.js"></script>
		<script type="text/javascript" src="./js/jquery.validate.min.js"></script>
		<script type="text/javascript" src="./js/localization/messages_es.js"></script>
		<script>
			function goToUrl(url)
			{
				window.location = url;
			}
			
			$(document).ready(function(){
				$("#user-modify-form").validate();
			});
		</script>
    </head>
	<body>
		<div id="header">
			<img src="images/Login/bm-logo.png"  alt="BM logo" id="base-bmlogo"/>
			<div id="base-header-text">
				Hoy es $dateLong.format($date.systemDate)<br/>
				Bienvenido, ${user.fullName}<br/>
				<a href='userLogin.do?op=logout'>Salir</a>
			</div>
			<div id="base-menu-bar">
                            <ul id="nav-bar">
                                <li><a href="listProjects.do">Proyectos</a></li>
                                <li><a href="listReports.do">Reportes</a></li>
                                #if($user.administrator)
                                <li><a href="listUsers.do">Usuarios</a></li>
                                #end
                                <li><a href="listTemplates.do">Plantillas</a></li>
                                <li><a href="listDefectTypes.do">Tipos de defectos</a></li>
                            </ul>
                        </div>
		</div>
		<div id="content"> <!--AQUI METER TODOS LOS INPUT, LABELS etc-->
			<div id="user">
				<form action="modifyUser.do" method="POST" id="user-modify-form">
					<h3 id="form-title">Modificar Usuario</h3>
					<table id="user-modify">
						<tr>
							<td>
								<label for ="userName" id="userName">Nombre de Usuario:</label>
							</td>
							<td>
								<span>${u.userName}</span>
								<input type="hidden" value="${u.userName}" name="userName" id="userName"  />
							</td>
						</tr>
						<tr>
							<td>
								<label for ="permissions" id="permissions">Permisos:</label>
							</td>
							<td>
								#if($u.permissions=='30')
									#if($u.userName == $user.userName)
                                                                            <select name="permissions" id="permissions" disabled="disabled">
                                                                                <option value="10">Usuario</option>
                                                                                <option value="20">Líder de proyecto</option>
                                                                                <option value="30" selected>Administrador/Gerente</option>
                                                                            </select>
									#else
                                                                            <select name="permissions" id="permissions">
                                                                                <option value="10">Usuario</option>
                                                                                <option value="20">Líder de proyecto</option>
                                                                                <option value="30" selected>Administrador/Gerente</option>
                                                                            </select>
									#end
								#else
                                                                        #if($u.permissions=='20')
                                                                            <select name="permissions" id="permissions">
                                                                                <option value="10">Usuario</option>
                                                                                <option value="20" selected>Líder de proyecto</option>
                                                                                <option value="30">Administrador/Gerente</option>
                                                                            </select>
                                                                        #else
                                                                            <select name="permissions" id="permissions">
                                                                                <option value="10" selected>Usuario</option>
                                                                                <option value="20">Líder de proyecto</option>
                                                                                <option value="30">Administrador/Gerente</option>
                                                                            </select>
                                                                        #end
								#end
							</td>
						</tr>
						<tr>
							<td>
								<label for ="fullName" id="fullName">Nombre Completo:</label>
							</td>
							<td>
								<input type="text" name="fullName" value="${u.fullName}" class="required" />
							</td>
						</tr>
						<tr>
							<td>
								<label for ="email" id="email">Email:</label>
							</td>
							<td>
								<input type="text" name="email" value="${u.email}" class="required email"/>
							</td>
						</tr>
						<tr>
							<td><a href="listUsers.do" id="cancel-link">Cancelar</a></td>
							<td>
								<input type="image" value="Aceptar" src="images/Base/aceptar.png" id="accept-button" />
							</td>
						</tr>
					</table>
				</form>
			</div>
		</div>
    </body>
</html>