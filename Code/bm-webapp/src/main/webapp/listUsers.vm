<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Usuarios - BUG MANAGER</title>
		<link rel="stylesheet" href="CSS/Style.css" type="text/css" media="screen" />
		<script>
			function goToUrl(url)
			{
				window.location = url;
			}
			
			function confirmDeleteUser(userName)
			{
				if (confirm("Estás seguro de borrar el usuario: "+userName+"?"))
				{
					goToUrl("deleteUser.do?userName="+userName);
				}
			}
		</script>
    </head>
	<body>
		<div id="header">
			<img src="images/Login/bm-logo.png"  alt="BM logo" id="base-bmlogo"/>
			<div id="base-header-text">
				Hoy es $dateLong.format($date.systemDate)<br/>
				Bienvenido, ${user.fullName}<br/>
				<a href='userLogin.do?op=logout'>Salir</a>
			</div>
			<div id="base-menu-bar">
                            <ul id="nav-bar">
                                <li><a href="listProjects.do">Proyectos</a></li>
                                <li><a href="listReports.do">Reportes</a></li>
                                #if($user.administrator)
                                <li><a href="listUsers.do">Usuarios</a></li>
                                #end
                                <li><a href="listTemplates.do">Plantillas</a></li>
                                <li><a href="listDefectTypes.do">Tipos de defectos</a></li>
                            </ul>
                        </div>
		</div>
		<div id="content"> 
			<div id="content-header">
				<span class="breadcrumb-title">Estas viendo:</span>
				<span class="breadcrumb-text">Todos los usuarios</span>

				<a href="newUser.do" id="add-icon-link">
					<img src="images/Base/agregar.png" id="add-icon-img" />
				</a>
			</div>
			#if ($users.empty)
				<h3 id="form-title">No existen usuarios registrados. <!-- No puedes estar viendo esto, sino tienes un usuario.... --></h3>
			#else
				<table id="content-table">
					<tr>
						<th>Usuario</th>
						<th>Nombre completo</th>
						<th>Permisos</th>
						<th>E-mail</th>
						<th colspan="2">Acciones</th>
					</tr>
					#foreach($u in $users)
					<tr>
						<td><a href="modifyUser.do?userName=${u.userName}">${u.userName}</a></td>
						<td>${u.fullName}</td>
						<td>
                                                    #if($u.permissions=='30')
                                                    Administrador/Gerente
                                                    #else
                                                        #if($u.permissions=='20')
                                                        Líder de proyecto
                                                        #else
                                                        Usuario
                                                        #end
                                                    #end
                                                </td>
						<td>${u.email}</td>
						<td>
							<a href="modifyUserPassword.do?userName=${u.userName}">Cambiar Password</a>
						</td>
						<td>
                                                    #if($u.userName != $user.userName && $u.isEmpty)
                                                    <a href="#" onclick="confirmDeleteUser('${u.userName}');">Borrar</a>
                                                    #end
						</td>
					</tr>
					#end
				</table>
			#end
			<div id="content-footer">
				<span class="breadcrumb-title">Estas viendo:</span>
				<span class="breadcrumb-text">Todos los Usuarios</span>

				<a href="newUser.do" id="add-icon-link">
					<img src="images/Base/agregar.png" id="add-icon-img" />
				</a>
                                
			</div>
		</div>
    </body>
</html>